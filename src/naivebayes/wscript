#!/usr/bin/python

def build(bld):
    bld.shlib(source = ['nb.cpp'],
              target = 'naivebayes',
              includes=bld.SRCPATH)

    bld(features = 'cxx cprogram',
        source = ['nb_test.cpp'],
        target = 'nb_test',
        includes = bld.SRCPATH,
        use = ['naivebayes'])
